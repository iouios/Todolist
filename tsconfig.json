{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",  // For React 17+
    "strict": true,
    "noEmit": true
  },
  "include": ["src"]
}
